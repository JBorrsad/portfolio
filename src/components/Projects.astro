---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  JAVA: {
    name: "Java",
    class: "bg-[#f89820] text-white",
    icon: NextJS,
  },
  SPRING: {
    name: "Spring Boot",
    class: "bg-[#6db33f] text-white",
    icon: NextJS,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#dd0031] text-white",
    icon: NextJS,
  },
  REACT: {
    name: "React Native",
    class: "bg-[#61dafb] text-black",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "E-commerce con Spring Boot",
    description:
      "Plataforma de comercio electrónico completa desarrollada con Spring Boot, Spring MVC y Hibernate. Incluye gestión de usuarios, carrito de compras, sistema de pagos y panel de administración. Implementa arquitectura limpia y principios SOLID.",
    link: "https://github.com/juan-borras/spring-ecommerce",
    github: "https://github.com/juan-borras/spring-ecommerce",
    image: "/projects/ecommerce.webp",
    tags: [TAGS.JAVA, TAGS.SPRING],
  },
  {
    title: "Aplicación Móvil con React Native",
    description:
      "App móvil multiplataforma para gestión de tareas personales. Incluye sincronización con la nube, notificaciones push, modo offline y geolocalización. Desarrollada con React Native, TypeScript y Firebase.",
    link: "https://github.com/juan-borras/task-app-react-native",
    github: "https://github.com/juan-borras/task-app-react-native",
    image: "/projects/mobile-app.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Dashboard Administrativo con Angular",
    description:
      "Panel de control empresarial desarrollado con Angular 17 y TypeScript. Incluye gestión de usuarios, reportes interactivos, gráficos en tiempo real y sistema de autenticación JWT. Implementa lazy loading y optimización de rendimiento.",
    link: "https://github.com/juan-borras/angular-dashboard",
    github: "https://github.com/juan-borras/angular-dashboard",
    image: "/projects/dashboard.webp",
    tags: [TAGS.ANGULAR, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



