---
import Link from "./icons/Link.astro"
import GitHub from "./icons/GitHub.astro"
import LinkButton from "./LinkButton.astro"
import { getProjects } from "@/lib/projects"

const projectsData = getProjects();
---

<div class="flex flex-col gap-y-16">
  {
    projectsData.map((project) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img 
        alt={project.title} 
        class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" 
        loading="lazy" 
        src={project.coverImage || "/projects/default.webp"} 
      />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {project.title}
    </h3>
    
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
          {project.tags.map((tag) => (
            <li>
              <span class="inline-flex items-center justify-center gap-2 px-4 py-1 text-xs text-gray-800 transition bg-gray-100 border border-gray-300 rounded-full dark:bg-gray-800 dark:border-gray-600 dark:text-white">
                {/* Si hay icono descargado, lo mostramos - SIN filtros para mantener colores originales */}
                {tag.iconPath ? (
                  <img 
                    src={tag.iconPath} 
                    alt={tag.name} 
                    class="size-4" 
                    style="object-fit: contain;"
                  /> 
                ) : null}
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="w-full mt-3 mb-2 text-xs font-medium text-gray-600 dark:text-gray-400">
        <span class="opacity-75">Última actualización:</span> {project.lastCommitDateFormatted}
      </div>

      <div class="mt-2 text-gray-700 dark:text-gray-400 text-pretty">
        {project.description}
      </div>
      
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {project.repoUrl && (
            <LinkButton href={project.repoUrl}>
              <GitHub class="size-6" />
              Code
            </LinkButton>
          )}
          {project.website && (
            <LinkButton href={project.website}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>

<style>
  /* Los iconos mantienen sus colores originales de marca */
  /* No aplicamos filtros CSS para preservar los colores originales de Simple Icons */
</style>
